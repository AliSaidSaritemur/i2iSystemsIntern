<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

<Appenders>


 <RollingFile name="ConsoleDebug" fileName="logs/times.log" filePattern="%d{HH:mm:ss}"
                 ignoreExceptions="false">
    
   <PatternLayout pattern="%d{HH:mm.ss} %n"/>
   <Policies>
    <SizeBasedTriggeringPolicy size = "3 KB"/>
   
   </Policies>
    
    </RollingFile>


 <RollingFile name="ConsoleInfo" fileName="logs/times.log" filePattern="%d{HH:mm}"
                 ignoreExceptions="false">
    
   <PatternLayout pattern="%d{HH:mm}:00  %n"/>
     <Policies>
    <SizeBasedTriggeringPolicy size = "3 KB"/>
   
   </Policies>
    </RollingFile>


 <RollingFile name="ConsoleError" fileName="logs/times.log" filePattern="%d{HH}"
                 ignoreExceptions="false">
    
   <PatternLayout pattern="%d{HH}:00:00 %n"/>
    <Policies>
    <SizeBasedTriggeringPolicy size = "3 KB"/>
   
   </Policies>
    </RollingFile>



</Appenders>


<Loggers>

<logger name= "com.proje.loggingError" level ="ERROR" additivity="false" >
<AppenderRef ref = "ConsoleError"/>
</logger>

<logger name= "com.projeloggingInfo" level ="INFO" additivity="false" >
<AppenderRef ref = "ConsoleInfo"/>
</logger>


<logger  name= "com.proje.logging" level ="DEBUG" additivity="false" >
<AppenderRef ref = "ConsoleDebug"/>
</logger>






</Loggers>





</Configuration>